@model ErrorViewModel
@{
    ViewData["Title"] = Model.StatusCode.HasValue ? $"Error {Model.StatusCode.Value}" : "Error";
}

@if (Model.StatusCode == 404)
{
    <h1 class="text-danger">Page Not Found (404)</h1>
    <h2 class="text-danger">Sorry, the page you requested could not be found.</h2>
    <p>Please check the URL or navigate back to the <a asp-controller="Home" asp-action="Index">homepage</a>.</p>
}
else if (Model.StatusCode == 500)
{
    <h1 class="text-danger">Internal Server Error (500)</h1>
    <h2 class="text-danger">An unexpected error occurred while processing your request.</h2>
    <p>We apologize for the inconvenience. Please try again later or contact support if the problem persists.</p>
}
else
{
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>
     @if (Model.StatusCode.HasValue)
     {
        <p>Status Code: @Model.StatusCode.Value</p>
     }
    <p>Please try again later or contact support if the problem persists.</p>
}

@* Optionally display Request ID for troubleshooting, even in production, if desired *@
@if (Model.ShowRequestId)
{
    <hr />
    <p>
        <small>Request ID: <code>@Model.RequestId</code></small>
    </p>
}
