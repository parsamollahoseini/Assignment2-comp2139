@model SmartInventory.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-2">Quantity in Stock</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.QuantityInStock)</dd>

        <dt class="col-sm-2">Low Stock Threshold</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LowStockThreshold)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>