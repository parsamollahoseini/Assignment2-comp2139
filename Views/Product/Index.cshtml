@model IEnumerable<SmartInventory.Models.Product>
@{
ViewData["Title"] = "Products";
}

<h2>Products</h2>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Low Stock Threshold</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
    <tr>
        <td>@product.Name</td>
        <td>@product.Category?.Name</td>
        <td>@product.Price</td>
        <td>@product.QuantityInStock</td>
        <td>@product.LowStockThreshold</td>
        <td>
            <a asp-action="Edit" asp-route-id="@product.ProductId">Edit</a> |
            <a asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add New Product</a>
